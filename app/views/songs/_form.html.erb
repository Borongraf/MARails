<%= form_with(model: song, local: true) do |form| %>
  <% if song.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(song.errors.count, "error") %> prohibited this song from being saved:</h2>
      <ul>
        <% song.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description %>
  </div>

  <div class="form-group m-2">
    <%= form.label :profile_image %><br />
    <%= form.file_field :profile_image %>
  </div>

  <div class="form-group m-2">
    <%= form.label :audio %><br />
    <%= form.file_field :audio %>
  </div>

  <div class="field m-2">
    <%= form.label :tags, style: "display: block" %>
    <%= form.text_field :all_tags %>
    <!-- Assuming a comma-separated list of tags -->
  </div>

  <div class="field m-2">
    <%= form.label :published %>
    <%= form.check_box :published %>
  </div>

  <div>
    <%= form.submit "Submit", class: "btn btn-info" %>
  </div>
<% end %>
