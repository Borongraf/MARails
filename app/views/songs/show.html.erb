<div
  class="container-fluid show d-flex"
  style="padding-left: 250px; padding-top: 100px"
>
  <p style="color: red"><%= notice %></p>
  <div class="d-flex"><%= render @song %></div>
  <div>
    <br />
    <div style="margin-left: 100px; ">
      <% if @song.profile_image.present? %> <%= image_tag @song.profile_image,
      width: 250, height: 300, resize_to_fill: [100, 100] %> <% else %>

      <%= image_tag '', width: 250, height: 300, resize_to_fill: [100, 100] %>
      <% end %>

      <br />
      <br />

    <br/>
  <%= audio_tag @song.audio, controls: true %>
    
    </div>
    <br />
    <div class="mt-3 " style="margin-left:170px">
      <h2>Your songs</h2>
      <% current_user.songs.each do |song| %>
      <p><%= link_to song.title, song_path(song) %></p>
      <% end %>
      
    </div>
  </div>
</div>

<div style="margin-left: 250px">
  <%= link_to "Edit this song", edit_song_path(@song) %>
  <br />
  <br />
  <%= button_to "Destroy this song", @song, method: :delete,class: "btn btn-danger" %>
</div>