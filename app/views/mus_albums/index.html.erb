<div class="container-fluid">
  <br/>
  <div class="row">
    <h4
        id="al"
        class="mt-4 mb-4 display-5 text-center"
        style="
        background-color: white;
          margin-left: -20px;
          color: rgb(30, 215, 96);
        "
    >
      Albums
    </h4>
  </div>

  <div id="card" class="container-fluid bg-white">
    <div class="row">
      <% @mus_album.each do |mus_album| %>

        <div class="col-md-3 col-sm-12 mb-4">
          <div class="card m-2" style="height: 180px; border: none">
            <div class="card1">
              <%= image_tag 'carousel2.jpg', class: 'card-img-top img-fluid',
                            style: 'max-height: 350px;width:200px' %>
              <h5
                  class="card-title text-center mt-4"
                  style="text-decoration: none; margin-left: -200px"
              >
                <%= link_to mus_album.title, mus_album %>

              </h5>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
