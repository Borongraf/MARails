<div
  class="container-fluid show d-flex"
  style="padding-left: 250px; padding-top: 100px"
>
  <p style="color: red"><%= notice %></p>
  <div class="d-flex"><%= render @mus_album %></div>
  <div>
    <br />
    <div style="margin-left: 100px; ">
      <% @mus_album.songs.each do |song| %>
        <div>
          <h3><%= song.title %></h3>
          <%= audio_tag @song.audio, controls: true %>
        </div>
      <% end %>
      <br />
      <br />
      <br/>

    </div>
    <br />
    <div class="mt-3 " style="margin-left:170px">
      <h2>Your albums</h2>
      <% current_user.mus_albums.each do |mus_album| %>
        <p><%= link_to mus_album.title, mus_album_path(mus_album) %></p>
      <% end %>

    </div>
  </div>
</div>

<div style="margin-left: 250px">
  <%= link_to "Edit this album", edit_mus_album_path(@mus_album) %>
  <br />
  <br />
  <%= button_to "Destroy this album", @mus_album, method: :delete,class: "btn btn-danger" %>
</div>